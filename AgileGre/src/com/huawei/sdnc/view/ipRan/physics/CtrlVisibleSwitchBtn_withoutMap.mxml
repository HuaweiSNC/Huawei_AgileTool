<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100" horizontalAlign="center"
		 >
	<fx:Script>
		<![CDATA[
			public var page:PhysicsView;
			public function changeState():void{
				page=parentDocument as PhysicsView;
			    if(	page.showCtrl){
					this.currentState = "closectrl";
				}else{
					this.currentState = "openctrl";
				}
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:states>
		<s:State name="closectrl"/>
		<s:State name="openctrl"/>
	</s:states>
	
	<s:Image buttonMode="true" horizontalCenter="0" mouseOut="tip_ctrl_close.visible=false"
				 mouseOver="tip_ctrl_close.visible=true" verticalCenter="0"
				 source.closectrl="@Embed('assets/imgs/ipran/closeCore.png')"
				 source.openctrl="@Embed('assets/imgs/ipran/openCore.png')"/>
	<s:Image id="tip_ctrl_close" visible="false" source="@Embed('assets/imgs/ipran/Close controller.png')" verticalCenter="0"			 
			     source.openctrl="@Embed('assets/imgs/ipran/Open controller.png')"/>
</s:VGroup>
