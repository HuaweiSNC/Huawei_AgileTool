<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark">

	<!-- background --> 
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="3" radiusY="3">

		<s:fill>
			<s:SolidColor color="0xd5d5d5" />
		</s:fill>

		<s:filters>
			<s:DropShadowFilter alpha="0.5" blurX="0" blurY="0" distance="1" strength="1"/>
		</s:filters>

	</s:Rect>

	<!-- inner board --> 
	<s:Rect left="1" right="1" top="1" bottom="1" radiusX="3" radiusY="3">

		<s:fill>
			<s:SolidColor color="0xf0f0f0" />
		</s:fill>

	</s:Rect>
	
</s:SparkSkin>
