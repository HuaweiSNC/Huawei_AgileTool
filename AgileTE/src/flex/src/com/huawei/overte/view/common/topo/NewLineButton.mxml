<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="80" height="80" fontSize="14" >
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
		<s:GlowFilter id="glow" color="0xffffff"/>
	</fx:Declarations>
	
	<s:Group id="group_line" width="100%" height="100%" buttonMode="true">
		<s:Image id="btnBg" y="0" horizontalCenter="0" width="50" height="50"  mouseOver="btnBg.filters = [glow]" mouseOut = "btnBg.filters = null"
				 source="@Embed('assets/imgs/ipcore/icon_core_link.png')"/>
		<s:Label bottom="0" width="100%" height="20" color="#FFFFFF" fontWeight="bold"
				 text="Add Link" textAlign="center" verticalAlign="middle"/>
	</s:Group>
	
</s:VGroup>
